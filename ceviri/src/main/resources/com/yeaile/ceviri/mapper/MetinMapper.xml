<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeaile.ceviri.mapper.MetinMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yeaile.ceviri.entity.Metin">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="language" property="language" />
        <result column="to_language" property="toLanguage" />
        <result column="language" property="language" />
        <result column="content" property="content" />
        <result column="tag_id" property="tagId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="status" property="status" />
        <result column="url" property="url" />
        <result column="metin_type" property="metinType" />
        <result column="delete_flag" property="deleteFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
 id, 
 user_id, 
 title, 
 content,
 language,
 to_language,
 create_time, 
 update_time, 
 status,
 tag_id,
 url, 
 metin_type, 
 delete_flag

    </sql>
    <select id="pageSelect" resultType="com.yeaile.common.domain.ceviri.vo.MetinVO">
        select
        <include refid="Base_Column_List"/>
        from tb_metin
        <if test="queryDto.userName != null and queryDto.userName != '' ">
            ,(select id as userid , user_name from tb_user where user_name like concat('%', #{queryDto.userName}, '%')) as t
            where user_id = t.userid
        </if>
        <if test="queryDto.title != null and queryDto.title != '' ">
            and title like concat('%', #{queryDto.title}, '%')
        </if>
        <if test="queryDto.content != null and queryDto.content != ''">
            and content concat('%', #{queryDto.content}, '%')
        </if>
        <if test="queryDto.status != null">
            and status = #{queryDto.status}
        </if>
        <if test="queryDto.metinType != null">
            and metin_type = #{queryDto.metinType}
        </if>
        <if test="queryDto.startTime!=null">
            AND (
            createTime  BETWEEN #{queryDto.startTime}
            AND #{queryDto.endTime}
            )
        </if>
        order by create_time, update_time desc
    </select>
</mapper>
