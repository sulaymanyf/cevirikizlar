<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeaile.user.mapper.RoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yeaile.user.entity.RoleMenu">
        <id column="id" property="id" />
        <result column="role_id" property="roleId" />
        <result column="menu_id" property="menuId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
 id, 
 role_id, 
 menu_id

    </sql>
    <select id="selectMenuByRoleId" resultType="com.yeaile.common.domain.user.vo.MenuVO">
        select tm.id,
               tm.code,
               tm.description,
               tm.url,
               tm.sort,
               tm.icon,
               tm.pid,
               tm.name,
               tm.path
        from tb_role_menu as trm
                 left join tb_menu tm on trm.menu_id = tm.id and tm.delete_flag=0
        where trm.role_id=#{id}

    </select>
</mapper>
