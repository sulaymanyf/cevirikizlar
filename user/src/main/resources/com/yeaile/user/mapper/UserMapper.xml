<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeaile.user.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yeaile.user.entity.User">
        <id column="id" property="id" />
        <result column="mobile" property="mobile" />
        <result column="password" property="password" />
        <result column="user_name" property="userName" />
        <result column="nick_name" property="nickName" />
        <result column="sex" property="sex" />
        <result column="first_name" property="firstName" />
        <result column="last_name" property="lastName" />
        <result column="birthday" property="birthday" />
        <result column="last_login_time" property="lastLoginTime" />
        <result column="avatar" property="avatar" />
        <result column="email" property="email" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="delete_flag" property="deleteFlag" />
        <result column="user_status" property="userStatus" />
        <result column="regdate" property="regdate" />
        <result column="online" property="online" />
        <result column="interest" property="interest" />
        <result column="login_count" property="loginCount" />
        <result column="personality" property="personality" />
        <result column="fanscount" property="fanscount" />
        <result column="followcount" property="followcount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
 id, 
 mobile, 
 password, 
 user_name, 
 nick_name, 
 sex, 
 first_name, 
 last_name, 
 birthday, 
 last_login_time, 
 avatar, 
 email, 
 create_time, 
 update_time, 
 delete_flag, 
 user_status, 
 regdate, 
 online, 
 interest, 
 login_count, 
 personality, 
 fanscount, 
 followcount

    </sql>
    <select id="getUserByUserName" resultType="com.yeaile.user.entity.User">
        select
        <include refid="Base_Column_List"/>
        from  tb_user  where user_name = #{username} and delete_flag =0
    </select>
    <select id="userList" resultType="com.yeaile.user.entity.User">
        select
        <include refid="Base_Column_List"/>
        from tb_user
        <if test="queryDto.email != null">
            and email = #{queryDto.email}
        </if>
        <if test="queryDto.userStatus != null">
            and user_status = #{queryDto.userStatus}
        </if>
        <if test="queryDto.userName != null and queryDto.userName != ''">
            and user_namelike concat('%', #{queryDto.userName}, '%')
        </if>
        <if test="queryDto.birthDay != null">
            and birth_day = #{queryDto.birthDay}
        </if>
        <if test="queryDto.mobile != null">
            and mobile = #{queryDto.mobile}
        </if>
        <if test="queryDto.startTime!=null">
            AND (
            createTime  BETWEEN #{queryDto.startTime}
            AND #{queryDto.endTime}
            )
        </if>
        <if test="queryDto.orderField != null" >
            ORDER BY
            <choose>
                <when test="queryDto.orderField == 'userName'">
                    user_name ${orderType}
                </when>
                <when test="queryDto.orderField == 'astLoginTime'">
                    ast_login_time ${orderType}
                </when>
                <when test="queryDto.orderField == 'birthDay'">
                    birth_day ${orderType}
                </when>
                <otherwise>
                    create_time ${orderType}
                </otherwise>
            </choose>
        </if>
    </select>
</mapper>
